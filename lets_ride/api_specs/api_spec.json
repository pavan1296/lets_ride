{
    "swagger": "2.0",
    "host": "localhost:8080",
    "basePath": "/lets_ride/",
    "info": {
        "version": "1.0.0",
        "title": "Lets Ride",
        "description": "API"
    },
    "schemes": [
        "http",
        "https"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "read users",
                "write": "create users",
                "update": "update users",
                "delete": "delete users",
                "superuser": "super user permission"
            },
            "type": "oauth2"
        }
    },
    "definitions": {
      "UserRideRequest": {
        "type": "object",
        "properties": {
          "from_place": {
            "type": "string"
          },
          "to_place": {
            "type": "string"
          },
          "is_flexible": {
            "type": "boolean"
          },
          "flexible_from_time": {
            "type": "string",
            "format": "date-time"
          },
          "flexible_to_time": {
            "type": "string",
            "format": "date-time"
          },
          "no_of_seats": {
            "type": "integer",
            "format": "int32"
          },
          "luggage_quantity": {
            "type": "integer",
            "format": "int32"
          },
          "travel_date_time": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "from_place",
          "to_place",
          "is_flexible",
          "flexible_from_time",
          "flexible_to_time",
          "no_of_seats",
          "luggage_quantity",
          "travel_date_time"
          ]
      },
      "UserAssetRequest": {
        "type": "object",
        "properties": {
          "from_place": {
            "type": "string"
          },
          "to_place": {
            "type": "string"
          },
          "travel_date_time": {
            "type": "string",
            "format": "date-time"
          },
          "is_flexible": {
            "type": "boolean"
          },
          "flexible_from_time": {
            "type": "string",
            "format": "date-time"
          },
          "no_of_assets": {
            "type": "integer",
            "format": "int32"
          },
          "asset_type": {
            "type": "string"
          },
          "asset_sensitivity": {
            "type": "string",
            "enum": [
              "HIGH_SENSITIVITY",
              "SENSITIVE",
              "NORMAL"
              ]
          },
          "whom_to_deliver": {
            "type": "string"
          }
        },
        "required": [
          "from_place",
          "to_place",
          "travel_date_time",
          "is_flexible",
          "flexible_from_time",
          "no_of_assets",
          "asset_type",
          "asset_sensitivity",
          "whom_to_deliver"
          ]
      }
    },
    "parameters": {},
    "responses": {
      "InvalidData": {
      "description": "bad request",
      "schema": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string"
          },
          "http_status_code": {
            "type": "integer"
          },
          "res_status": {
            "type": "string"
          }
        }
      }
    }
    },
    "paths": {
      "/user/ride/request/v1/": {
        "post": {
          "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
          "operationId": "ride_request",
          "summary": "Ride Reuest",
          "description": "ride request",
          "parameters": [
            {
              "name": "ride_request",
              "in": "body",
              "description": "user_ride_request",
              "schema": {
                "$ref": "#/definitions/UserRideRequest"
              }
            }
            ],
          "responses": {
            "201": {
              "description": "Success_response"
            },
            "400": {
              "$ref": "#/responses/InvalidData"
            }
          }
        }
      },
      "/user/asset/request/v1/": {
        "post": {
          "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "operationId": "asset_request",
        "summary": "Asset Request",
        "description": "asset request",
        "parameters": [
          {
            "name": "asset_request",
            "in": "body",
            "description": "user_asset_request",
            "schema": {
              "$ref": "#/definitions/UserAssetRequest"
            }
          }
          ],
          "responses": {
            "201": {
              "description": "success_response"
            },
            "400": {
              "$ref": "#/responses/InvalidData"
            }
          }
        }
      }
    }
}